    "version": "0.2.0",
    "configurations": [
        {
            "name": "PMCID to Text",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.pmcid_to_text.fetch_article",
            "args": ["--pmcid", "PMC1884285", "--save_path", "data/articles"],
            "console": "integratedTerminal"
        },
        {
            "name": "Check OA Status",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.pmcid_to_text.check_oa_status",
            "console": "integratedTerminal"
        },
        {
            "name": "Aaron HTML",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.pmcid_to_text.html_getter",
            "console": "integratedTerminal"
        },
        {
            "name": "Single Article",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.markdown_from_pmid",
            "args": ["--pmid", "12895196", "--save_dir", "data"],
            "console": "integratedTerminal"
        },
        {
            "name": "Pubmed Converter",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.pubmed_downloader",
        }
    ]
}